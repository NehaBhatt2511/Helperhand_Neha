<!DOCTYPE html>
<html lang="en">
<head>
    <title>Helperland</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="Helperland, Home, HTML, CSS, JavaScript, Bootstrap">
    <link rel="icon" type="image/x-icon" href="~/images/logo/favicon_img.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/home.css">
</head>
<body onload="checkForLoginModal();checkForPasswordModal();" onscroll="stickyNavbar();" onresize="setLogoByWinSize();">
    <div class="home">
        <div class="home-content">
            <header>
                <nav class="navbar navbar-expand-lg p-2 pt-3" id="navbar">
                    <a asp-action="index" asp-controller="customer">
                        <img src="~/images/Home/white-logo-transparent-background.png" alt="logo" id="navlogo">
                    </a>
                    <button type="button" class="navbar-toggler" id="navmain" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav ms-auto navOption">
                            <a asp-action="" asp-controller="" class="navOptionOutline ot1" id="btnBookCleaner">Book a Cleaner</a>
                            <a asp-action="prices" asp-controller="customer" class="navOptionOutline">Prices</a>
                            <a asp-action="" asp-controller="" class="navOptionOutline">Our Guarantee</a>
                            <a asp-action="" asp-controller="" class="navOptionOutline">Blog</a>
                            <a asp-action="contactus" asp-controller="customer" class="navOptionOutline">Contact us</a>
                            <a asp-action="" asp-controller="" class="navOptionOutline ot1" id="btnLogin" data-bs-toggle="modal" data-bs-target="#loginModal" role="button">Login</a>
                            <a asp-action="becomeaprovider" asp-controller="ServiceProvider" class="navOptionOutline ot1" id="btnBecomeHelper">Become a Helper</a>
                            <div id="navcountry">
                                <a id="ddCountry" class="p-0 m-0" role="button" data-bs-toggle="dropdown" aria-expanded="false"><div id="ddCountryImgContainer"><img src="~/images/Home/india.jpg" class="ps-4 pe-2 pt-2"><div class="dv-downarr"><img class="img-pro-downarr" src="~/images/upcoming-service/down-arrow.png"></div></div></a>
                                <ul class="dropdown-menu ms-2 mt-2" aria-labelledby="ddCountry" style="width: 5%; right: 10px; left: auto;">
                                    <li class="liddCountry p-0 m-0"><a class="dropdown-item" asp-action="" asp-controller=""><img src="~/images/Home/canada.jpg" alt="canada"></a></li>
                                    <li class="liddCountry p-0 m-0"><a class="dropdown-item" asp-action="" asp-controller=""><img src="~/images/Home/us.jpg" alt="us"></a></li>
                                    <li class="liddCountry p-0 m-0"><a class="dropdown-item" asp-action="" asp-controller=""><img src="~/images/Home/uk.png" alt="uk"></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="background_disable_effect"></div>
                </nav>
            </header>
            <div class="hometext">
                <p>Do not feel like housework?</p>
                <ul>
                    <li>Great! Book now for Helperland and enjoy the benefits</li>
                    <li>&#10004; certified & insured helper</li>
                    <li>&#10004; easy booking procedure</li>
                    <li>&#10004; friendly customer service</li>
                    <li>&#10004; secure online payment method</li>
                </ul>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btnBookCleaner">Let’s Book a Cleaner</button>
            </div>
            <div class="subtask-container">
                <div class="dv-subtask mx-3">
                    <div class="dvimg-subtask d-flex justify-content-center align-items-center">
                        <img src="~/images/home/postcode.png" class="img-fluid">
                    </div>
                    <p class="subtask-desc">Enter your postcode</p>
                </div>
                <img src="~/images/home/step-arrow-1.png" class="img-fluid mt-4 arrow">
                <div class="dv-subtask mx-3">
                    <div class="dvimg-subtask d-flex justify-content-center align-items-center">
                        <img src="~/images/home/plan.png" class="img-fluid">
                    </div>
                    <p class="subtask-desc">Select your plan</p>
                </div>
                <img src="~/images/home/step-arrow-1-copy.png" class="img-fluid mt-4 arrow">
                <div class="dv-subtask mx-3">
                    <div class="dvimg-subtask d-flex justify-content-center align-items-center">
                        <img src="~/images/home/payonline.png" class="img-fluid">
                    </div>
                    <p class="subtask-desc">Pay securely online</p>
                </div>
                <img src="~/images/home/step-arrow-1.png" class="img-fluid mt-4 arrow">
                <div class="dv-subtask mx-3">
                    <div class="dvimg-subtask d-flex justify-content-center align-items-center">
                        <img src="~/images/home/service.png" class="img-fluid">
                    </div>
                    <p class="subtask-desc">Enjoy amazing service</p>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <a href="#footer" class="bottomnav"><i class="fal fa-arrow-down"></i></a>
            </div>
        </div>
    </div>

    <!-- body section start -->
    <div class="container-fluid p-0">
        @RenderBody()
    </div>
    <!-- body section end -->

    <div class="container-fluid customer-outer-container py-5">
        <div class="row">
            <div class="col-md-1 d-flex justify-content-center" id="test">
                <a asp-action="" asp-controller="" onclick="topnavigation();"><div class="topnav"><img src="~/images/Home/forma-1.png" alt="forma-1"></div></a>
            </div>
            <div class="col-md-10 text-center">
                <p class="newsletter">GET OUR NEWSLETTER</p>
                <div>
                    <input type="text" class="form-control-sm rounded-pill textbox" placeholder="YOUR EMAIL">
                    <input type="submit" class="btn rounded-pill submit" value="Submit">
                </div>
            </div>
            <div class="col-md-1 d-flex justify-content-center">
                <img src="~/images/Home/layer-598.png" alt="layer-598">
            </div>
        </div>
    </div>
    <div class="container-fluid" id="footer">
        <footer>
            <table class="table table-borderless">
                <tr class="row footer1 align-items-center text-center">
                    <td class="col-md-2">
                        <a asp-action="index" asp-controller="customer"><img src="~/images/Home/white-logo-transparent-background-copy-4.png" alt="white-logo-transparent-background-copy-4"></a>
                    </td>
                    <td class="col-md-8">
                        <a asp-action="index" asp-controller="customer">HOME</a>
                        <a asp-action="aboutus" asp-controller="customer">ABOUT</a>
                        <a asp-action="" asp-controller="">TESTIMONIALS</a>
                        <a asp-action="faq" asp-controller="customer">FAQs</a>
                        <a asp-action="" asp-controller="">INSURANCE POLICY</a>
                        <a asp-action="" asp-controller="">IMPRESSUM</a>
                    </td>
                    <td class="col-md-2">
                        <a asp-action="" asp-controller="" class="pe-2"><img src="~/images/Home/fb.png" alt="fb"></a>
                        <a asp-action="" asp-controller=""><img src="~/images/Home/insta.png" alt="insta"></a>
                    </td>
                </tr>
                <tr class="row footer2 align-items-center">
                    <td class="col-md-11 text-center">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut feugiat nunc libero, ac malesuada ligula aliquam ac. <a asp-action="" asp-controller="" class="privacypolicy">Privacy Policy</a>
                    </td>
                    <td class="col-md-1" align="right">
                        <input type="button" value="OK!" class="btnok">
                    </td>
                </tr>
            </table>
        </footer>
    </div>

    <partial name="_LoginForgotPasswordModalLayout" />

    @if (IsSectionDefined("scripts"))
    {
        @RenderSection("scripts", required: true)
    }

    <!-- script -->
    <script src="~/js/home.js"></script>
    <!-- script for sidebar navigation -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_SidebarNavigationLayout" />

    @if (ViewBag.openLoginModel == true)
    {
        <script type="text/javascript">
            $(window).on('load', function () {
                $('#loginModal').modal('show');
            });
        </script>
    }

    <!-- Sweet alert -->
    <link href="~/lib/limonte-sweetalert2/sweetalert2.css" rel="stylesheet" />
    <script src="~/lib/limonte-sweetalert2/sweetalert2.js"></script>
    @if (ViewBag.ForgotPasswordResetLinksend == true)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Forgot Password',
                text: 'If provided Email is a Registered Email ID on Helperland, you will receive an Email with further Instructions on how to Reset your Password!!',
            })
        </script>
    }
</body>
</html>